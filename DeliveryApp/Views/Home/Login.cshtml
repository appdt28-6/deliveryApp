@model DeliveryApp.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login :: Interimobel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="css/bootstrap.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Content/style/css/style.css" rel='stylesheet' type='text/css' />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="css/font.css" type="text/css" />
    <link href="~/Content/style/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
</head>
<body class="signup-body">

    @using (@Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="agile-signup">

            <div class="content2">
                <div class="grids-heading gallery-heading signup-heading">
                    <img src="~/Content/images/appd.png" width="400" height="120" />
                </div>
                <form action="." method="post">
                    @Html.TextBoxFor(a => a.UserName, new { placeholder = "Usuario" })
                    @Html.ValidationMessageFor(a => a.UserName)
                    @Html.PasswordFor(a => a.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(a => a.Password)
                    <input type="submit" class="register" value="Login">
                    <p style="color:red;font-size:10px">@Html.ValidationSummary(true)</p>
                </form>
                <div class="signin-text">
                    <div class="text-left">
                        <!--<p><a href="#"> Olvido de contraseña? </a></p>-->
                    </div>
                    <div class="text-right">
                        <!--<p><a href="signup.html"> Create New Account</a></p>-->
                    </div>
                    <div class="clearfix"> </div>
                </div>

            </div>


        </div>
    }
</body>
</html>


